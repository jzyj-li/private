@import "common.styl"
.mine
	width 100%
	height 100%
.mine-mes
	height 50%
	padding-top 1.5rem
	.photo
		width 2.66rem
		height 2.6rem
		background-image url(../images/mine.png)
		background-size 100%
		background-repeat no-repeat
		background-position center
		margin 0 auto
	p
		color #4e4e4e
		text-align center
	.name
		font-size 16px
		margin-top .6rem
	.tel
		font-size 14px
.form-item
	width 92%
	height 0.9rem
	color white
	label
		width 2rem
		background-color $color
		line-height 0.78rem
		font-size 14px
		color white
	input
		padding 0
		color #333333
		padding-left 0.25rem
		
	
