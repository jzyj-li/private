$color = #c8da36
*
	box-sizing border-box
html, body
	width 100%
	height 100%
	background-color white
	font-size 50px
input,button
	border none
	outline none
p
	margin 0
.bg
	width 100%
	height 100%
	img
		width 100%
.form
	width 100%
	text-align center
	font-size 0
	overflow hidden
.form-item
	width 80%
	height 0.83rem
	display flex
	flex-flow row
	align-items center
	background-color $color
	border .06rem solid $color
	margin 0 auto
	margin-bottom .3rem
	label
		height 100%
		background-color white
		font-size 16px
		color #666666
		flex-shrink 0
		padding-left .3rem
		line-height 0.71rem
	input
		font-size 14px
		border none
		margin-bottom 0
		height 100%
		padding-left 0px
		border-radius 0px
	.code
		color white
		font-size 12px
		flex-shrink 0
		padding 0 0.22rem
	.pull
		color white
.button
	width 80%
	height 0.83rem
	margin 0 auto
	background-color $color
	font-size 16px
	text-align center
	line-height .83rem
	color white
	padding 0px
.small-form-item
	position relative
	display inline-block
	font-size 12px
	width 30%
	height .6rem
	border 1px solid $color
	margin-bottom .2rem
	label
		line-height .6rem
		width 100%
		text-align center
		padding-left .2rem
	span
		position absolute
		right 0
		top 0
		color white
		background-color $color
		height 100%
		line-height .6rem
.txt
	display inline-block
	font-size 12px
	line-height .6rem
.small-form
	display flex
	flex-flow row
	justify-content space-between
	flex-wrap wrap
.search
	width 25%
	height .6rem
	color white
	text-align center
	line-height .6rem
	font-size 12px
	background-color $color
	margin-bottom .3rem

.footer
	position fixed
	left 0
	bottom 0
	display flex
	flex-flow row
	width 100%
	height 1.2rem
	background-color $color
	.item
		text-align center
		display block
		flex 1
		font-size 14px
		color white
		padding-top .2rem
		p
			color white
			font-size 12px
.upload
	display flex
	flex-flow row
	justify-content space-around
	text-align center
	padding-top .3rem
	margin-bottom .3rem
	p
		margin-top .2rem
		font-size 14px
		color $color
.tip
	padding-left 4%
	font-size 14px
	color #333333
	
	
	
	