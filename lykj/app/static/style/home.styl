@import "app.styl"
.banner
	position relative
	width 100%
	height 4.7rem
	img
		width 100%
		height 100%
	button
		position absolute
		width 2.15rem
		height .58rem
		bottom .73rem
	.no-credit
		left 1.2rem
	.has-credit
		right 1.2rem

.home
	height 90%

.product-list
	padding 0 4%
	background-color white
	.item
		width 100%
		height 2.30rem
		border-bottom 4px solid #f5f3f6
		.title
			display flex
			flex-flow row
			height 1rem
			align-items center
			h5
				font-size 16px
				color #28282a
			.star-wrap
				display inline-block
				height .26rem
				margin-left .2rem
				font-size 0px
				span
					display inline-block
					width 0.26rem
					height 0.26rem
					margin-right .08rem
					vertical-align top
					background-image url(../images/star.png)
					background-repeat no-repeat
					background-position center
					background-size 0.26rem
				.none
					background-image url(../images/n_star.png)
		.mes
			display flex
			flex-flow row
			justify-content space-between
			& > div
				p:first-child
					line-height 23px
					font-size 23px
					color $baseCOlor
					small
						font-size 13px
						color #bfbcc0
				p:last-child
					margin-top .1rem
					font-size 13px
					color #bfbcc0
				p
					height auto

.credit-list
	width 100%
	overflow hidden
	.item
		display inline-block
		width 49.6%
		padding .2rem .3rem
		min-height 4.72rem
		background-color white
		margin-bottom 0.06rem
		float left
		.img
			width 100%
			height 2rem
			border-radius 6px
			img
				width 100%
		h5
			margin-top .2rem
			font-size 13px
			color #202020
			margin-bottom .05rem
		.label
			font-size 0px
			span
				display inline-block
				min-width 1.3rem
				height 0.42rem
				border 1px solid $baseCOlor
				font-size 10px
				color $baseCOlor
				line-height .42rem
				padding 0 0.15rem
				border-radius 4px
				margin-top .1rem
				margin-right .12rem
		button
			width 1.9rem
			height .55rem
			font-size 10px
			color white
			text-align center
			line-height .55rem
			border-radius 2px
			background-color $baseCOlor
			margin 0 auto
			margin-left .6rem
	.item:nth-child(2n)
		margin-left 0.06rem
.default
	img
		width 100%
	button
		display block
		width 2.9rem
		height .87rem
		border-radius .43rem
		background-color $baseCOlor
		font-size 13px
		color white
		text-align center
		line-height .87rem
		margin 0 auto
		margin-top .5rem
	
		
			
			
					